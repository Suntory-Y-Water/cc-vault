{
  "name": "cc-vault",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:cf": "opennextjs-cloudflare build && pnpm run dev",
    "build": "next build",
    "schedule": "opennextjs-cloudflare build && wrangler dev --test-scheduled",
    "start": "next start",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format ./src",
    "prepare": "husky",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "ai-check": "pnpm run typecheck && pnpm run lint",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "upload": "pnpm run db:local:all && opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:local": "tsx scripts/migrate.ts local latest",
    "db:local:all": "tsx scripts/migrate.ts local all",
    "db:backup:prod": "tsx scripts/backup-production.ts"
  },
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@google/genai": "^1.20.0",
    "@libsql/client": "^0.15.15",
    "@opennextjs/cloudflare": "^1.8.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "linkedom": "^0.18.12",
    "lucide-react": "^0.541.0",
    "next": "15.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "",
    "*.{js,jsx,ts,tsx,json,css,md}": ""
  }
}
