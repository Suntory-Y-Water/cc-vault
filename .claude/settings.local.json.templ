{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__serena",
      "mcp__playwright",
      "mcp__context7",
      "mcp__deepwiki",
      "Bash(pnpm run:*)",
      "Bash(scripts/create-new-feature.sh:*)",
      "Bash(chmod:*)"
    ],
    "deny": [
      "Bash(rm -rf ../*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Read(.env.*)",
      "Read(.credentials.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env*)",
      "Write(**/secrets/**)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["context7", "serena"],
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -Command \"New-BurntToastNotification -Text 'Claude Code', 'タスクが完了しました'\""
          },
          {
            "type": "command",
            "command": "~/.claude/scripts/hook_stop_words.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run --silent -i ~/.claude/scripts/typescript/no_restricted_edit.ts"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ~/.claude/scripts/statusline.js"
  }
}
